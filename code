#include <iostream>
#include <Windows.h>
#include <string>

using namespace std;
string number;
string revers;
revers = "";

int main()
{
    SetConsoleCP(1251);
    SetConsoleOutputCP(1251);
    int choise;
    cout << "1" "\n";
    cout << "2" "\n";
    cout << "3" "\n";
    cout << "Выберите задание" "\n";
    cin >> choise;

    if (choise == 1)
    {
        cout << "Введите число(оно должно быть трехзначным):    ";
        cin >> number;
        if (number.length() == 3)
        {
            for (int i = number.length(); i >= 0; i--)
            {
                revers = revers + str[i];
            }
            cout << revers;
        }
        else
        {
            cout << "Длина числа: " << number.length() << ". Пожалуйста, введите трехзначное число.";
        }
    }
}
